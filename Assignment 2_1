def is_prime(num):
    """Checks if a number is prime.

    Args:
        num: The number to check.

    Returns:
        True if the number is prime, False otherwise.
    """

    if num <= 1:
        return False Â  

    if num <= 3:
        return True
    if num % 2 == 0 or num % 3 == 0:
        return False

    i = 5
    while i * i <= num:
        if num % i == 0 or num % (i + 2) == 0:
            return False
        i += 6

    return True

def find_factors(num):
    """Finds the factors of a number.

    Args:
        num: The number to find factors for.

    Returns:
        A list of factors of the number.
    """

    factors = []
    for i in range(1, num + 1):
        if num % i == 0:
            factors.append(i)
    return factors

def main():
    """Main function to get user input and process it."""

    print("Prime Number Checker")

    while True:
        try:
            num = int(input("Please enter an integer between 1 and 5000: "))
            if 1 <= num <= 5000:
                break
            else:
                print("Error: Please enter a number between 1 and 5000.")
        except ValueError:
            print("Error: Invalid input. Please enter an integer.")

    if is_prime(num):
        print(f"{num} is a prime number.")
    else:
        factors = find_factors(num)
        num_factors = len(factors)
        print(f"{num} is NOT a prime number.")
        print(f"It has {num_factors} factors: ", end="")
        for factor in factors:
            print(factor, end=" ")
        print()

    while True:
        choice = input("Try again? (y/n): ")
        if choice.lower() == 'y':
            main()
        elif choice.lower() == 'n':
            print("Bye!")
            break
        else:
            print("Invalid input. Please enter 'y' or 'n'.")

if __name__ == "__main__":
    main()
